<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EAFFFC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/bg_profile_top"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/btn_pro_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:text="User ID"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/pro_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/pic_profileicon"/>

        <TextView
            android:id="@+id/pro_name"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="His Name"
            android:textSize="22sp"
            android:gravity="center_horizontal"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/pro_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hong Kong, Kowloon"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="3dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:orientation="vertical"
            android:background="@drawable/bg_profile_box">

            <TextView
                android:id="@+id/travel_times"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="6"
                android:textSize="70dp"
                android:gravity="center_horizontal|center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Journeys"
                android:textSize="20dp"
                android:gravity="center_horizontal|top"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_profile_line"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_profile_box">

        </LinearLayout>


