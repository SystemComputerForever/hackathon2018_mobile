<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- The spot -->
        <ImageView
            android:id="@+id/timeline_circle"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/dot_schedule_time" />

        <!-- top line -->
        <View
            android:id="@+id/timeline_top_line"
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_marginLeft="33dp"
            android:background="#888888" />

        <!-- bottom line -->
        <View
            android:id="@+id/timeline_other_line"
            android:layout_width="1dp"
            android:layout_height="23dp"
            android:layout_below="@+id/timeline_top_line"
            android:layout_marginLeft="33dp"
            android:background="#888888" />

        <!-- tourist attraction -->
        <LinearLayout
            android:id="@+id/timeline_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_toRightOf="@+id/timeline_circle"
            android:orientation="horizontal">

            <!-- time -->
            <TextView
                android:id="@+id/timeline_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:text="18:00"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <!-- place -->
                <TextView
                    android:id="@+id/timeline_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:text="Airport" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>